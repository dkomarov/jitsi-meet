# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{java,kt}]
indent_size = 4

[*.xml]
indent_size = 2

[*.{swift,m,mm,h}]
indent_size = 4
